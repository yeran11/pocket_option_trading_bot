{
  "name": "pocket-option-trading-bot",
  "version": "1.0.0",
  "description": "Professional Trading Bot Desktop Application",
  "main": "electron-main-simple.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "author": "Trading Bot Pro",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.tradingbot.pro",
    "productName": "Trading Bot Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main-simple.js",
      "electron-preload-simple.js",
      "electron-ui/**/*",
      "pocket_option_trading_bot/**/*",
      "!pocket_option_trading_bot/__pycache__",
      "!pocket_option_trading_bot/*.pyc"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}